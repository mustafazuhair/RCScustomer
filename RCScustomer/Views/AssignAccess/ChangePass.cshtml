@using RCScustomer.Models



@section PageHeader{

  Change My Access

}

@using (Html.BeginForm())
{
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading"><h3>Customer Login</h3></div>
            <div class="panel-body">
                <div class="form-horizontal">
                    <div class="col-md-6">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ContactObj.CustomerKey, new { id = "CustomerKey" })
                        @Html.HiddenFor(model => model.ContactObj.ContactKey, new { id = "ContactKey" })
                     
                        @Html.HiddenFor(model => model.UserKey, new { id = "UserKey" })

                        <div class="form-group">
                            @Html.LabelFor(model => model.ContactObj.Cname, "Name", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.ContactObj.Cname, new { htmlAttributes = new { @readonly = "readonly", id = "Cname", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ContactObj.Cname, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.ContactObj.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ContactObj.Title, new { htmlAttributes = new { @readonly = "readonly", id = "Title", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ContactObj.Title, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.ContactObj.Phone, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ContactObj.Phone, new { htmlAttributes = new { @readonly = "readonly", id = "Phone", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ContactObj.Phone, "", new { @class = "text-danger" })
                            </div>
                        </div>




                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { id = "Username", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.PasswordFor(model => model.Password, new { id = "Password", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.PasswordFor(model => model.ConfirmPassword, new { id = "ConfirmPassword", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="panel-footer">

                <input type="submit" name="Save" id="Save" value="Save" class="btn btn-default" />
             <h3>@ViewBag.mess</h3>

            </div>
        </div>
    </div>
}